    <body class="bg-light">
      <div class="container-lg my-2 text-center">
        <form action="/record" id="recordform" method="post">
      <div class="row justify-content-center">
      </div>

        <!-- Sliders for each emotion -->
        <div class="row justify-content-center">
          <div class="col-md-6">
            <div class="row mb-3">
              <div class="col">
                <label class="form-label" for="enjoymentSlider">Enjoyment</label>
                <input type="range" class="form-range slider" id="enjoymentSlider" name="myenjoyment" oninput="updateSliderValue('enjoymentValue', this.value)">
                <p id="enjoymentValue">50</p>
              </div>
              <div class="col">
                <label class="form-label" for="sadnessSlider">Sadness</label>
                <input type="range" class="form-range slider" id="sadnessSlider" name="mysadness" oninput="updateSliderValue('sadnessValue', this.value)">
                <p id="sadnessValue">50</p>
              </div>
            </div>
            <div class="row mb-3">
              <div class="col">
                <label class="form-label" for="angerSlider">Anger</label>
                <input type="range" class="form-range slider" id="angerSlider" name="myanger" oninput="updateSliderValue('angerValue', this.value)">
                <p id="angerValue">50</p>
              </div>
              <div class="col">
                <label class="form-label" for="contemptSlider">Contempt</label>
                <input type="range" class="form-range slider" id="contemptSlider" name="mycontempt" oninput="updateSliderValue('contemptValue', this.value)">
                <p id="contemptValue">50</p>
              </div>
            </div>
            <div class="row mb-3">
              <div class="col">
                <label class="form-label" for="disgustSlider">Disgust</label>
                <input type="range" class="form-range slider" id="disgustSlider" name="mydisgust" oninput="updateSliderValue('disgustValue', this.value)">
                <p id="disgustValue">50</p>
              </div>
              <div class="col">
                <label class="form-label" for="fearSlider">Fear</label>
                <input type="range" class="form-range slider" id="fearSlider" name="myfear" oninput="updateSliderValue('fearValue', this.value)">
                <p id="fearValue">50</p>
              </div>
            </div>
            <div class="row mb-3">
              <div class="col">
                <label class="form-label" for="surpriseSlider">Surprise</label>
                <input type="range" class="form-range slider" id="surpriseSlider" name="mysurprise" oninput="updateSliderValue('surpriseValue', this.value)">
                <p id="surpriseValue">50</p>
              </div>
            </div>

            <!-- Dropdown menu for triggers -->
            <div class="form-group col-mb-3">
              <label for="inputTrigger">Emotional Trigger</label>
              <select id="inputTrigger" class="form-control my-2 text-center" name="mytrigger">
                <option selected>None</option>
                <option>Social Interaction</option>
                <option>Physical Activity</option>
                <option>Family</option>
                <option>Friends</option>
                <option>Work</option>
                <option>Health</option>
                <option>Education</option>
                <option>Sleep</option>
                <option>Weather</option>
                <option>Social Media</option>
              </select>
            </div>

            <!-- Pre-populated date and time fields-->
            <div class="row mb-3 my-5">
              <div class="col">
                <label for="datepicker">Date:</label>
                <input type="text" id="datepicker" class="form-control text-center" name="mydate" readonly>
 
              </div>
              <div class="col">
                <label for="timepicker">Time:</label>
                <input type="text" id="timepicker" class="form-control text-center" name="mytime" readonly>

              </div>
            </div>
            
            <!-- Submit and Reset buttons -->
            <div class="field">
              <div class="control">
                  <input class="btn btn-success my-2" type="submit" value="Submit">
                  <input class="btn btn-danger my-2 px-3" type="reset" value="Reset" onclick="resetForm()">
              </div>
            </div>

          </div>
        </div>
        </form>
      </div>

      <script>
        // Function to reset the form
        function resetForm() {
          // Reset the sliders
          resetSlider('enjoymentSlider', 'enjoymentValue', 50);
          resetSlider('sadnessSlider', 'sadnessValue', 50);
          resetSlider('angerSlider', 'angerValue', 50);
          resetSlider('contemptSlider', 'contemptValue', 50);
          resetSlider('disgustSlider', 'disgustValue', 50);
          resetSlider('fearSlider', 'fearValue', 50);
          resetSlider('surpriseSlider', 'surpriseValue', 50);

          // Reset the emotional trigger dropdown to default
          document.getElementById('inputTrigger').value = 'None'; 
          // Prevent the form from being submitted if the user selects Reset
          event.preventDefault();
        }
      
        // Function to reset a slider
        function resetSlider(sliderId, displayId, defaultValue) {
          document.getElementById(sliderId).value = defaultValue;
          document.getElementById(displayId).innerHTML = defaultValue;
        }
        </script>
      <script>
      
        // Function to set the current date and time
        function setCurrentDateTime() {
        const currentDate = new Date();
      
        // Format the date
        const formattedDate = currentDate.toISOString().split('T')[0];

        // Format the time
        const currentHours = currentDate.getHours().toString().padStart(2, '0');
        const currentMinutes = currentDate.getMinutes().toString().padStart(2, '0');
        const formattedTime = `${currentHours}:${currentMinutes}`;

        // Set the value of the input fields
        document.getElementById('datepicker').value = formattedDate;
        document.getElementById('timepicker').value = formattedTime;
    }

        // Call the function to set current date and time when the page loads
        setCurrentDateTime();


        // Attach a submit event listener to the form
        document.getElementById('recordform').addEventListener('submit', function() {
        // Set the values of hidden input fields before form submission
        document.getElementById('mydate').value = document.getElementById('datepicker').value;
        document.getElementById('mytime').value = document.getElementById('timepicker').value;
        });


      </script>
    
