    <!-- Beginning of content -->
    <h1 class="text-center m-2 pt-5">Record your emotions below</h1>
    <div class="text-center shadow-sm p-2">
      <p>
        Please be as honest as possible
      </p>
    </div>

    <div class="text-danger text-center">
      <p class="bg-white d-inline-block p-2 rounded-pill">
        Remember: 0 = Lowest, 100 = Highest
      </p>
